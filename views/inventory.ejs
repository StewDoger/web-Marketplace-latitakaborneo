<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Inventory</title>
</head>
<body>
    <!-- Include navbar -->
    <header>
        <div class="wrapper">
            <!-- Include navbar.ejs here -->
            <%- include('../includes/navbar.ejs') %>
        </div>
    </header>
    <div class="wrapper">
        <section id="Order">
            <h2>Daftar Produk</h2>
        </section>
    </div>

    <ul>
        <% if (products && products.length > 0) { %>
            <% products.forEach(function(product) { %>
                <li>
                    <strong><%= product.name %></strong><br>
                    <%= product.description %><br>
                    Harga: Rp <%= product.price %><br>
                    Stok: <%= product.stock %><br>

                    <!-- Form untuk update produk -->
                    <form action="/inventory/update/<%= product._id %>" method="POST">
                        <label for="stock">Update Stok:</label>
                        <input type="number" name="stock" value="<%= product.stock %>" required>
                        <button type="submit">Update</button>
                    </form>
                </li>
            <% }); %>
        <% } else { %>
            <p>Tidak ada produk yang tersedia.</p>
        <% } %>
    </ul>

    <section id="TambahProduk" class="tambah-produk-section">
        <h2>Tambah Produk Baru</h2>
        <form action="/submit_produk" method="POST" class="tambah-produk-form">
            <label for="nama-produk">Nama Produk:</label>
            <input type="text" id="nama-produk" name="nama-produk" required>
        
            <label for="deskripsi-produk">Deskripsi Produk:</label>
            <textarea id="deskripsi-produk" name="deskripsi-produk" required></textarea>
        
            <label for="harga-produk">Harga Produk:</label>
            <input type="number" id="harga-produk" name="harga-produk" required>
        
            <label for="stok-produk">Stok Produk:</label>
            <input type="number" id="stok-produk" name="stok-produk" required>
        
            <button type="submit">Tambah Produk</button>
        </form>
    </section>    

        <!-- Include footer -->
        <%- include('../includes/footer') %>

        <script src="/js/script.js"></script>
</body>
</html>
